// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  // previewFeatures = ["clientExtensions"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  eventID     Int       @id @default(autoincrement())
  title       String
  ubication   String
  description String
  startDate   DateTime
  endDate     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Gallery {
  galleryID Int      @id @default(autoincrement())
  name      String   @unique
  Images    Image[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Image {
  imageID   Int      @id @default(autoincrement())
  imageURL  String
  galery    Gallery  @relation(fields: [galleryID], references: [galleryID])
  galleryID Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  userID   Int    @id @default(autoincrement())
  userName String
  email    String @unique
  password String
}

model Announcement {
  announcementID  Int        @id @default(autoincrement())
  title           String
  announcementDate DateTime
  activities      Activity[]
}

model Activity {
  activitieID    Int          @id @default(autoincrement())
  name           String
  announcementID Int
  announcement   Announcement @relation(fields: [announcementID], references: [announcementID])
}
